######################################################
SCRIPT_VERSION="upgrade USRP V0.99"                  #
SCRIPT_AUTHOR="DS5QDR Lee, Heonmin"                  #
SCRIPT_DATE="20/05/2021"                             #
######################################################

echo
echo download USRP from github
cd /home/pi/USRP
sudo rm -rf tmp
git clone https://github.com/ds5qdr/USRP_update.git tmp

echo
echo copy USRP dmr_status
sudo chmod +x tmp/USRP tmp/dmr_status tmp/usrp_start tmp/usrp_upgrade
sudo chown pi:pi *
sudo mv  tmp/USRP           .
sudo mv  tmp/dmr_status     .
sudo mv  tmp/dmr_status.txt .
sudo chown pi:pi *
sudo mv  tmp/usrp_start   /home/pi/
sudo mv  tmp/upgrade_usrp /home/pi/
sudo mv  tmp/autostart    /etc/xdg/lxsession/LXDE-pi/
sudo mv  tmp/*.jpg        /home/pi/
sudo mv  tmp/*.desktop    /home/pi/Desktop/

echo
echo remove tmp directory
sudo rm -rf tmp

echo
echo change ownership
cd /home/pi
sudo chown pi:pi *

echo
echo kill USRP & dmr_status
sudo kill `ps -ef | grep "USRP" | grep -v 'grep' | awk '{print $2}'` 
echo USRP killed
echo
sudo kill `ps -ef | grep "dmr_status" | grep -v 'grep' | awk '{print $2}'` 
echo dmr_status killed

echo
echo restart USRP
/home/pi/usrp_start
