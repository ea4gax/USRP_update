echo kill dmr_status, USRP
kill `ps -ef | grep 'dmr_status' | grep -v 'grep' | awk '{print $2}'` 
kill `ps -ef | grep 'USRP'       | grep -v 'grep' | awk '{print $2}'` 

echo run USRP
cd /home/pi/USRP
/home/pi/USRP/USRP
